<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MusicX" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
    </style>

    <style name="Theme.MusicX.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">#322E33</item>
        <item name="android:listPreferredItemHeightSmall">15dp</item>
    </style>

    <style name="NavigationTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:listPreferredItemHeightSmall">50dp</item>
        <item name="android:textSize">40sp</item>
    </style>

</resources>