<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#10000000"
    android:layout_height="wrap_content"
    tools:context=".NowPlayingFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:id="@+id/relative_layout_for_botom_main">



        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progresBar_main"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:max="100"
            android:progress="90"
            android:progressTint="@color/rosado"
            android:layout_alignParentTop="true"
            />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/progresBar_main"
            android:layout_marginBottom="6dp"
            >


        <ImageView
            android:id="@+id/music_img_main"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/background_items_list"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:layout_marginStart="15dp"
            android:layout_alignParentStart="true" />

            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/numcancion_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginStart="10dp" />

        <LinearLayout
            android:id="@+id/linear_layout_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/music_img_main"
            android:layout_toLeftOf="@id/prev_main"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@id/music_img_main"
            android:layout_toStartOf="@id/prev_main"
            android:layout_marginStart="5dp">



            <TextView
                android:id="@+id/music_file_name_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" songs music natural melodi , and live music , music player spirit pro , one riack future comÃ±ani universe "
                android:layout_marginLeft="7dp"
                android:maxLines="1"
                android:textColor="@color/white"
                android:layout_marginStart="7dp" />


            <TextView
                android:layout_marginLeft="7dp"
                android:id="@+id/texartista_main"
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:text=" artista arcangel ft dalmata ft neon daemon "
                android:maxLines="1"
                android:textColor="@color/rosado"
                android:layout_marginStart="7dp" />

        </LinearLayout>











        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/prev_main"
            android:src="@drawable/ic_previous"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/play_pause_main"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"
            android:layout_toStartOf="@id/play_pause_main"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="5dp" />




<ImageView
    android:id="@+id/play_pause_main"
    android:layout_width="45dp"
    android:layout_height="45dp"
    android:layout_marginRight="4dp"
    android:padding="7dp"
    android:layout_toLeftOf="@id/next_main"
    android:src="@drawable/ic_play"
    android:layout_centerVertical="true"
    android:layout_marginEnd="4dp"
    android:background="@drawable/background_button_play_pause"
    android:layout_toStartOf="@id/next_main"/>



        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/next_main"
            android:src="@drawable/ic_next"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="15dp"
            android:layout_alignParentEnd="true"
           />


        </RelativeLayout>

    </RelativeLayout>


</FrameLayout>