<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:id="@+id/audio_item"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="@drawable/selector_item_background"
    android:layout_marginTop="5dp">


<RelativeLayout
    android:layout_width="55dp"
    android:layout_height="50dp"
    android:id="@+id/portLeft"
    android:layout_centerVertical="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">


        <ImageView
            android:id="@+id/music_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="3dp"
            android:layout_marginStart="3dp" />

        <TextView
            android:layout_marginLeft="4dp"
            android:id="@+id/numcancion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textStyle="bold"
            android:textColor="@color/blanco"
            android:textSize="12sp"
            android:background="@drawable/textviewbackgroundcard"
            android:layout_marginStart="4dp" />

</RelativeLayout>

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/portLeft"
            android:layout_toLeftOf="@id/menuMore"
            android:orientation="vertical"
            android:layout_toEndOf="@id/portLeft"
            android:layout_toStartOf="@id/menuMore">

        <TextView
            android:id="@+id/music_file_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="songs music natural melodi , and live music "
            android:layout_marginLeft="7dp"
            android:maxLines="1"
            android:textSize="13sp"
            android:layout_marginStart="7dp" />


                <TextView
                    android:layout_marginLeft="7dp"
                    android:id="@+id/texartista"
                    android:layout_width="wrap_content"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    android:text="artista arcangel "
                    android:maxLines="1"
                    android:layout_marginStart="7dp" />


                <TextView
                    android:layout_marginLeft="7dp"
                    android:id="@+id/duracion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3:45"
                    android:maxLines="1"
                    android:textSize="12sp"
                    />

        </LinearLayout>




        <ImageView
            android:id="@+id/menuMore"
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_more"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />


</RelativeLayout>